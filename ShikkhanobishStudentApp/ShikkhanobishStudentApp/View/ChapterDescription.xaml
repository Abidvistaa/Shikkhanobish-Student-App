<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShikkhanobishStudentApp.ViewModel"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             x:Class="ShikkhanobishStudentApp.View.ChapterDescription">
    <ContentPage.BindingContext>
        <viewmodel:ChapterDesciptionViewModel/>
    </ContentPage.BindingContext>
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="1"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="1"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Margin="5,0,5,0"  Grid.Row="0" Source="videocall.png"  ></Image>
            <Frame Grid.Row="1" BackgroundColor="#10000000"></Frame>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="15"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="170"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Text="Hasan Ali" FontSize="11" Padding="20,10,0,0" FontAttributes="Bold" TextColor="Gray" HorizontalOptions="Start" VerticalOptions="Center"/>
                <Label Grid.Row="1"  Text="Physics"  FontSize="18" Padding="20,0,0,0" FontAttributes="Bold" TextColor="#6A08B2" HorizontalOptions="Start" VerticalOptions="Center"/>
                <Grid Grid.Row="2" Padding="20,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                   
                    </Grid.ColumnDefinitions>
                   
                    <Label Grid.Column="0"  HorizontalOptions="Start" VerticalOptions="Center" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="* * * *  *"  FontSize="11"   FontAttributes="Bold" TextColor="Crimson"/>
                                <Span Text="  512" FontAttributes="Bold" FontSize="11"/>
                                <Span Text="  Ratings" FontAttributes="Bold" FontSize="11" />
                             
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Grid.Column="1"  HorizontalOptions="Start" VerticalOptions="Center" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="42" FontAttributes="Bold" FontSize="11"/>
                                <Span Text="  Hours" FontAttributes="Bold" FontSize="11" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Grid.Column="2"  HorizontalOptions="Start" VerticalOptions="Center" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="2" FontAttributes="Bold" FontSize="11"/>
                                <Span Text="  Sessions" FontAttributes="Bold" FontSize="11" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
          
                </Grid>
                <Label Grid.Row="3" Text="Descriptions"  FontSize="11" Padding="20,15,0,0" FontAttributes="Bold" TextColor="Gray" HorizontalOptions="Start" VerticalOptions="Center"/>
                <Label Grid.Row="4" Text="chapterDeschap terDescha pterDesc hapterDesc hapterDeschapterD eschapterDeschap terDeschapterDesch apterDes" Padding="20,0,20,20" FontSize="14" FontAttributes="Bold" FontFamily="arial" TextColor="Black"/>
                <material:MaterialCard Grid.RowSpan="5" CornerRadius="5" BackgroundColor="#1000" Margin="10,10,10,10"/>
            </Grid>
            <Frame Grid.Row="3" BackgroundColor="#10000000"></Frame>

            <Grid Grid.Row="4" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="40"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Frame BackgroundColor="White" Grid.Column="1"></Frame>
                <ListView ItemsSource="{Binding topicList}" Grid.Column="1" RowHeight="100"  SeparatorColor="Purple"  >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="30"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Label  Grid.Row="0"  Margin="0,10,0,0" Padding="5,5,0,0"  Text="{Binding tagName}" FontSize="12" BackgroundColor="Transparent" TextColor="#6A08B2" FontAttributes="Bold"></Label>
                                        <Label  Grid.Row="1" Padding="5,0,5,0"   Text="topicDes topicDes topicDes topicDes topicDes topicDes topicDes" FontSize="12"  TextColor="Black"/>
                                    </Grid>
                                    <Image  Grid.Column="1" Source="right.png" ></Image>
                                </Grid>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>


        </Grid>
        
    </Grid>
    
</ContentPage>